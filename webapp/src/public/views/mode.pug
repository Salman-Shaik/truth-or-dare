doctype html
head
    meta(charset='UTF-8')
    title Truth Or Dare : Something Different
    link(rel='stylesheet' href='css/master.css')
    link(rel='stylesheet' href='css/mode.css')
    link(rel='shortcut icon' type='image/jpg' href='images/favicon.ico')
    script(rel='script' src='js/mode.js')
    script(rel='script' src='js/common/methods.js')
header
    h1 Truth &amp; Dare
main
    .errorAlert(style='visibility: hidden')
        i.material-icons(style='font-size:30px;color: rgba(255, 0, 0, 0.75);') error_outline
        span.errorMessage
    section.mode(style='display: none')
        select#mode.modeDropDown
            option(value='default' selected='')  Select Mode
            option(value='Funny') Funny &#x1F603;
            option(value='Hot') Hot &#x1F609; (18+)
            option(value='Super Hot') Super Hot &#x1F608;&#x1F336; (18+)
    div.buttonsDiv
        button.prev(type='submit') &lt; Previous
        button.next(type='submit') Next &gt;